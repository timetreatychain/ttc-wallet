<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.ttc.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/main_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#F7F7F7"></android.support.v4.view.ViewPager>

    <RadioGroup
        android:id="@+id/main_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="78px"
        android:background="@drawable/main_tab_style"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/main_tab_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="8px"
            android:drawableTop="@drawable/main_tab_money_style"
            android:gravity="center"
            android:text="资产"
            android:textColor="@drawable/main_tab_text_style"
            android:textSize="24px" />

        <RadioButton
            android:id="@+id/main_tab_jy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="8px"
            android:drawableTop="@drawable/main_tab_jy_style"
            android:gravity="center"
            android:text="交易"
            android:textColor="@drawable/main_tab_text_style"
            android:textSize="24px" />

        <RadioButton
            android:id="@+id/main_tab_myself"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="8px"
            android:drawableTop="@drawable/main_tab_myself_style"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/main_tab_text_style"
            android:textSize="24px" />
    </RadioGroup>

</com.zhy.autolayout.AutoLinearLayout>
